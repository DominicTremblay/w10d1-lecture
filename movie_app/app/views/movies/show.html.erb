<h1>Movie</h1>

<p>
<%= link_to 'All Movies', movies_path %>
</p>


<div class="media show">


 
  <%= link_to(image_tag(@movie.image_url, alt: @movie.title), @movie) %>
 
    <div class="media-body">
      <h5 class="mt-0 mb-1"><%= link_to(@movie.title, @movie) %></h5>

      <p>
      <%= @movie.description %></p>

      <ul class="list-group">
        <li class="list-group-item">Director: <%= @movie.director %></li>
        <li class="list-group-item">Release Date: <%= @movie.release_date %></li>
        <li class="list-group-item">Run Time: <%= @movie.runtime_in_minutes %></li>
      </ul>

    </div>
  </div>

  <h3>Reviews</h3>


  <h4>Add a review</h4>

  <%= form_with model: [@movie, @review] do |form| %>

  <div class="form-group">
  <%= form.label :rating %>
  <%= form.text_field :rating %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <%= form.submit "Add Review" %>

  <% end %>

  <ul class="list-group">
    <%= render @reviews %>     
  </ul>